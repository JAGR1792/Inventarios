# ===== CONFIGURACIÓN BÁSICA =====
FLASK_ENV=development
SECRET_KEY=dev-secret
SESSION_TYPE=filesystem

# Base de datos local (SQLite)
DATABASE_URL=sqlite:///instance/pos.sqlite

# ===== GOOGLE SHEETS INTEGRATION =====
# Sincronización automática con Google Sheets
# IMPORTANTE: Al habilitar esto, la app importará automáticamente al iniciar
# y exportará automáticamente después de cada cambio

# Habilitar Google Sheets (true/false)
GOOGLE_SHEETS_ENABLED=true

# ID del spreadsheet (cópialo de la URL de tu Google Sheet)
# Formato: https://docs.google.com/spreadsheets/d/[ESTE_ES_EL_ID]/edit
# EJEMPLO: 1bz8eO7vDA8H0YTViEKfI_Snil3Yibh9qnd_3mirAH9M
GOOGLE_SHEETS_SPREADSHEET_ID=TU_SPREADSHEET_ID_AQUI

# Nombre de la pestaña/hoja en el Google Sheet
GOOGLE_SHEETS_WORKSHEET_NAME=INVENTARIO

# Archivo JSON con las credenciales de Google Cloud (Service Account)
# Descárgalo desde Google Cloud Console y colócalo en la raíz del proyecto
# Comparte tu Google Sheet con el email del Service Account como "Editor"
GOOGLE_CREDENTIALS_FILE=KEY.json

# ===== CONFIGURACIÓN EXCEL (LEGACY - OPCIONAL) =====
EXCEL_IMPORT_PATH=GAROM OK.xlsx
EXCEL_WORKSHEET_NAME=INVENTARIO
LOCAL_EXCEL_ENGINE=openpyxl

# Optional: folder for product images (desktop UI)
IMAGES_DIR=images

# ===== MICROSOFT EXCEL ONLINE (LEGACY - OPCIONAL) =====
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_TENANT=consumers
MS_REDIRECT_URI=http://localhost:5000/excel/callback
TOKEN_ENCRYPTION_KEY=

# Intervalo de sincronización (segundos)
GOOGLE_SHEETS_SYNC_INTERVAL_SECONDS=300
